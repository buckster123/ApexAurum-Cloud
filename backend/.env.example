# ApexAurum Cloud - Environment Configuration

# ===========================================
# REQUIRED
# ===========================================

# Anthropic API Key (required for chat)
ANTHROPIC_API_KEY=sk-ant-...

# Database URL
DATABASE_URL=postgresql+asyncpg://apex:apex_dev_password@localhost:5432/apex

# Redis URL
REDIS_URL=redis://localhost:6379/0

# Secret key for JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# OPTIONAL
# ===========================================

# Voyage AI for better embeddings
VOYAGE_API_KEY=

# Suno AI for music generation
SUNO_API_KEY=

# S3/MinIO configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=apex_minio
S3_SECRET_KEY=apex_minio_secret
S3_BUCKET=apex-storage

# ===========================================
# DEFAULTS
# ===========================================

# Debug mode (enables API docs, verbose logging)
DEBUG=true

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
